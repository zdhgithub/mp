/*音频*/

.audioView {
  position: absolute;
  right: 20px;
  top: 65px;
  /*background-color: yellow;*/
  width: 30px;
  height: 30px;
  animation: lalaland 5s infinite;
  -webkit-animation: lalaland 5s infinite linear;
}

@keyframes lalaland {
  from {
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes lalaland {
  from {
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
  }
}

