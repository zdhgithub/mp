.itemView {
  height: 60px;
  background-color: white;
  border-bottom: #e5e5e5 solid 1px;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  position: relative;
}

.itemView image {
  width: 40px;
  height: 40px;
  margin-left: 12px;
  border-radius: 20px;
  background: lightgrey url('data:image/png;base64,') no-repeat center;
  background-size: 40px 40px;
}

.Portrait_placeHolder {
  /*background-color: yellow;*/
  position: absolute;
  left: 0px;
  top: 10px;
}

.itemView text {
  margin-left: 25px;
  color: #1e1b29;
  font-size: 16px;
}
