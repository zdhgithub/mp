/* pages/mine/myAccount/myAccount.wxss */

.headView {
  width: 750rpx;
  height: 300rpx;
  background-color: rgba(0, 0, 0, 0);
  /*background-color: blue;*/
  position: fixed;
  left: 0px;
  top: 0px;
}

.img-head {
  background-color: #0dd4e6;
  display: block;
  width: 100%;
  height: 270rpx;
}

.headView image {
  position: absolute;
  bottom: 0rpx;
  left: 310rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
}

/*个人信息区域*/

.itemView {
  margin-top: 310rpx;
  background-color: white;
  border-top: #d3d3d3 solid 0.5px;
  border-bottom: #d3d3d3 solid 0.5px;
}

.item_item {
  height: 45px;
}

.itemName {
  color: black;
  font-size: 17px;
  margin-left: 12px;
  line-height: 44px;
}

.itemContent {
  color: #bfbfbf;
  font-size: 17px;
  margin-left: 57px;
  line-height: 44px;
  word-break: break-all;
}

.line {
  background-color: #d3d3d3;
  height: 0.5px;
  margin-left: 12px;
}
.tips{
  color: #9b9b9b;
  font-size: 13px;
  margin-top: 12px;
  margin-left: 12px;
}

