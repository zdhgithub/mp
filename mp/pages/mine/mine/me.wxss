.headView {
  width: 750rpx;
  height: 300rpx;
  background-color: rgba(0, 0, 0, 0);
  position: fixed;
  left: 0px;
  top: 0px;
}

.img-head {
  background-color: #0dd4e6;
  display: block;
  width: 100%;
  height: 270rpx;
}

.portraitView {
  /*background-color: turquoise;*/
  display: inline-block;
  position: absolute;
  left: 20rpx;
  bottom: 0rpx;
  width: 100%;
  height: 130rpx;
}

.portraitView image {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
}

.portraitView text {
  position: absolute;
  left: 150rpx;
  bottom: 30rpx;
  color: white;
  font-size: 24px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.itemsList {
  margin-top: 310rpx;
}

.itemsGroup {
  background-color: white;
  margin-top: 15px;
  border-top: #d3d3d3 solid 0.5px;
  border-bottom: #d3d3d3 solid 0.5px;
}

.itemsGroupNoGap {
  background-color: white;
  margin-top: 0px;
  border-top: #d3d3d3 solid 0.5px;
  border-bottom: #d3d3d3 solid 0.5px;
}

.itemview {
  /*background-color: blue;*/
  height: 44px;
}

.itemview_contentView {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  height: 43px;
}

.itemView_leftView {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

.itemview image {
  /*background-color: blue;*/
  margin-left: 12px;
  width: 20px;
  height: 20px;
}

.itemView_itemName {
  /*background-color: yellow;*/
  display: inline-block;
  margin-left: 18px;
  color: #333;
  font-size: 18px;
}

.itemView_rightView {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  /*background-color: blue;*/
  align-items: center;
  height: 44px;
  margin-right: 12px;
  color: #f6807d;
}

.piaoCoins {
  color: #f6807d;
  font-size: 50px;
  background-color: red;
}

.arrow_Img {
  width: 24px;
  height: 24px;
  /*background-color: red;*/
}

.line {
  background-color: #d3d3d3;
  height: 0.5px;
  margin-left: 12px;
}
