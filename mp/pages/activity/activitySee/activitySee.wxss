.container {
  display: inline-block;
  position: relative;
  width: 750rpx;
}

.releaserInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  /*background-color: red;*/
}
.userinfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  /*background-color: red;*/
}

.releaserInfo_icon {
  display: flex;
  margin-left: 25rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}

.releaserInfo_nickname {
  display: flex;
  margin-left: 20rpx;
  color: #60cad4;
  font-size: 14px;
}

.zanCount_share {
  display: flex;
  flex-direction: row-reverse;
  color: #fff;
  font-size: 11px;
  margin-right: 25rpx;
  background-color: #3cd79e;
  border: #3cd79e solid 1px;
  padding: 5px;
  border-radius: 4px;
}
.text {
  display: block;
  /*text-indent: 2em;*/
  font-size: 18px;
  color: #888;
  padding: 34rpx 25rpx 10rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
  line-height: 150%；;
}

.itemList, .itemList_cell {
  display: inline-block;
  text-align: center;
}

.itemList_cell_img {
  display: inline-block;
  width: 700rpx;
  height: 350rpx;
  margin-top: 20rpx;
}

/*赞*/

.zan {
  display: block;
  /*margin-top: 30rpx;*/
}

.zanCount {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  /*background-color: green;*/
  margin-right: 25rpx;
}


.zanCount_area {
  display: flex;
  height: 40px;
  width: 100px;
  flex-direction: row-reverse;
  align-items: center;
  /*background-color: yellow;*/
}

.dianzan {
  font-size: 11px;
  color: red;
}

.zanCount_img {
  display: flex;
  width: 30rpx;
  height: 30rpx;
  margin-left: 3px;
}

.zanCount_count {
  display: flex;
  font-size: 12px;
  color: #4c5154;
  padding-left: 12rpx;
}

/*------------------------------收起------------------------------*/

.zanName {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 25rpx;
  margin-bottom: 30rpx;
  /*background-color: greenyellow;*/
  overflow: hidden;
  padding-bottom: 10px;
}

.zanName_img {
  display: flex;
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}

.zanName_names {
  display: flex;
  width: 560rpx;
  height: 40rpx;
  overflow: hidden;
}

.zanName_names_text {
  display: flex;
  font-size: 13px;
  color: #7a7d7e;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.zanName_btn {
  display: flex;
  margin-right: 25rpx;
  width: 86rpx;
  height: 40rpx;
  border-radius: 4.0px;
  border: #999 solid 1px;
  justify-content: center;
  align-items: center;
}

.zanName_btn_text {
  display: flex;
  /*margin-left: 5px;*/
  padding: 0px;
  color: #949899;
  font-size: 9px;
}

/*------------------------------展开------------------------------*/

.zanName_more {
  display: inline-box;
  margin: 0 25rpx 30rpx;
  width: 700rpx;
  padding-bottom: 10px;
  /*background-color: greenyellow;*/
}
.zanName_img_more {
  float: left;
  margin-top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.zanName_names_more {
  display: inline;
}

.zanName_names_more_text {
  display: inline;
  margin-left:3px;
  font-size: 13px;
  color: #7a7d7e;
  line-height: 150%;
  word-break: break-all;
  word-wrap:break-word;
}

.zanName_btn_more {
  float: right;
  display: inline-flex;
  display: -webkit-inline-flex;
  flex-flow: row warp;
  justify-content: center;
  align-items: center;
  width: 86rpx;
  height: 40rpx;
  border-radius: 4.0px;
  border: #999 solid 1px;
}

.zanName_btn_more_text {
  display: flex;
  color: #949899;
  font-size: 9px;
}


.helpShare_mask {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(100, 100, 100, 0.8);
}

.helpShare_img {
  display: block;
  position: fixed;
  top: 0px;
  right: 75rpx;
  width: 525rpx;
  height: 230rpx;
}

.helpShare_text {
  display: block;
  position: fixed;
  top: 270rpx;
  /*right: 180rpx;*/
  left: 50rpx;
  color: #fff;
  font-size: 14px;
}

.helpShare_mask_hidden {
  display: none;
}

.helpShare_img_hidden {
  display: none;
}

.helpShare_text_hidden {
  display: none;
}