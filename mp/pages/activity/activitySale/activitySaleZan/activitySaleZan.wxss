@import "../../activitySee/activitySee.wxss";

.zanCount_share {
  display: flex;
  flex-direction: row-reverse;
  color: green;
  font-size: 15px;
  margin-right: 25rpx;
}

.releaserInfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  /*background-color: red;*/
}

.releaserInfo_icon {
  display: flex;
  margin-left: 25rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
}

.releaserInfo_nickname {
  display: flex;
  margin-left: 20rpx;
  color: #60cad4;
  font-size: 14px;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #60cad4;
  width: 690rpx;
  margin-bottom: 30rpx;
}

.btn_img {
  display: flex;
  width: 47rpx;
  height: 45rpx;
}

.btn_text {
  display: flex;
  margin-left: 30rpx;
  font-size: 15px;
  color: #fff;
}

.helpShare_mask {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(100, 100, 100, 0.5);
}

.helpShare_img {
  display: block;
  position: fixed;
  top: 0px;
  right: 75rpx;
  width: 525rpx;
  height: 230rpx;
}

.helpShare_text {
  display: block;
  position: fixed;
  top: 270rpx;
  right: 180rpx;
  color: #fff;
  font-size: 14px;
}

.helpShare_mask_hidden {
  display: none;
}

.helpShare_img_hidden {
  display: none;
}

.helpShare_text_hidden {
  display: none;
}


/*发布内容*/
.releaseView {
  position: absolute;
  width: 66rpx;
  height: 230rpx;
  right: 24rpx;
  top: 700rpx;
  background-color: rgba(65, 65, 65, 0.8);
  border-radius: 33rpx;
}

.see {
  position: absolute;
  width: 15px;
  height: 15px;
  top: 13px;
  left: 7px;
}

.viewContent {
  position: absolute;
  font-size: 14px;
  color: #159ceb;
  width: 14px;
  top: 35px;
  left: 7px;
  line-height: 100%;
}
